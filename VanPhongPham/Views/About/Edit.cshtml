@model VanPhongPhamDTO.Entities.About

@{
    ViewData["Title"] = "Sửa thông tin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div>
    <a asp-action="Index">Quay lại trang quản lý</a>
</div>
<div class="container-fluid mb-3 mt-3">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Sửa thông tin</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AB_Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea class="summernote" asp-for="Content"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company_PN" class="control-label"></label>
                    <input asp-for="Company_PN" class="form-control" />
                    <span asp-validation-for="Company_PN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company_Email" class="control-label"></label>
                    <input type="email" asp-for="Company_Email" class="form-control" />
                    <span asp-validation-for="Company_Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User_Id" class="control-label"></label>
                    <select asp-for="User_Id" class="form-control" asp-items="ViewBag.User_Id"></select>
                    <span asp-validation-for="User_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
</div>
