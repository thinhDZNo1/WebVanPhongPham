@model List<VanPhongPhamDTO.Entities.Products>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h5 class="ml-3 mb-2">Quản lý sản phẩm</h5>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><a asp-action="Create"><i class="fas fa-plus-circle mr-2"></i>Thêm mới</a></h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div style="overflow-x: auto;">
                        <table id="example2" class="table table-bordered table-hover mr-2" style="table-layout:fixed;">
                            <thead>
                                <tr>

                                    <th width="80">Chức năng</th>
                                    <th width="120">Tên sản phẩm</th>
                                    <th width="200">Ảnh đại diện</th>
                                    <th width="250">Miêu tả</th>
                                    <th width="120">Tên nhà sản xuất</th>
                                    <th width="80">Kích thước</th>
                                    <th width="80">Trạng thái</th>
                                    <th width="80">Đơn vị</th>
                                    <th width="90">Loại sản phẩm</th>
                                    <th width="80">Số lượng</th>
                                    <th width="80">Giá</th>
                                    <th width="250">Chi tiết sản phẩm</th>
                                    <th width="250">Ảnh giới thiệu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td width="80" class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Product_Id"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Product_Id" onclick='confirm("Bạn có chắc chắn muốn xóa không?");'><i class="far fa-trash-alt"></i></a>
                                    </td>
                                    <td width="120">@item.Product_Name</td>
                                    <td width="200">
                                        <img src="@("/images/"+item.Product_Images)" height="100" class="m-2" />
                                    </td>
                                    <td width="250"><div style="overflow: auto; width: 100%; height: 152px;">@Html.Raw(item.Description)</div></td>
                                    <td width="120">@item.Producer.Producer_Name</td>
                                    <td width="80">@item.Size</td>
                                    <td width="80">@item.Status</td>
                                    <td width="80">@item.Unit</td>
                                    <td width="120">@item.Category_Detail.CD_Name</td>
                                    <td width="80">@item.Stock</td>
                                    <td width="80">@item.Price</td>
                                    <td width="250"><div style="overflow: auto; width: 100%; height: 152px;">@Html.Raw(item.Detail_Description)</div></td>
                                    <td width="250">
                                        @if (item.Description_Images != null)
                                        {
                                            @foreach (string img in item.Description_Images.Split(','))
                                            {
                                                @if (img.Length > 0)
                                                {
                                                    <img src="@("/images/"+img)" height="50" class="m-2" />
                                                }
                                            }
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>

